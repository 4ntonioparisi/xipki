  --issuer output/subcawithcrl1.crt \
  --cert output/ocsp2.crt \
  --exp-status keyCompromise \
  --exp-certhash forbidden \
  --exp-sig-alg $SIGALGO \
  --nonce \
  --resp-issuer output/rootca1.crt

echo "QA: Good (POST, CRL)"
