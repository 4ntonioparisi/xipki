  --issuer output/subcawithcrl1.crt \
  --serial 99999 \
  --exp-status good \
  --exp-certhash forbidden \
  --exp-sig-alg $SIGALGO \
  --url $URL_CRL \
  --nonce \
  --resp-issuer output/rootca1.crt

echo "QA: Unknown (RFC6960) (POST, DB)"
xiqa:qa-ocsp-status $VERBOSE \
  --issuer output/subca1.crt \
  --serial 99999 \
  --exp-status unknown \
  --exp-sig-alg $SIGALGO \
