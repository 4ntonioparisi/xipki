<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>main</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>../shared/license</directory>
      <outputDirectory>license</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>../shared/conf/xipki/etc</directory>
      <outputDirectory>etc</outputDirectory>
      <includes>
        <include>org.xipki.*</include>
      </includes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>../shared/conf/xipki</directory>
      <outputDirectory>xipki</outputDirectory>
      <includes>
        <include>etc/ca/**</include>
        <include>etc/ocsp/**</include>
        <include>security/**</include>
      </includes>
      <excludes>
        <exclude>etc/ocsp/ocsp-responder.xml</exclude>
      </excludes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${output.directory}</directory>
      <excludes>
        <exclude>bin/*.bat</exclude>
      </excludes>
      <includes>
        <include>bin/**</include>
        <include>**/*.sh</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${output.directory}</directory>
      <includes>
        <include>bin/*.bat</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>dos</lineEnding>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${output.directory}</directory>
      <excludes>
        <exclude>bin/**</exclude>
        <exclude>**/*.sh</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Copy over start scripts -->
    <fileSet>
      <directory>${project.build.directory}/apache-karaf-minimal-${karaf.version}/bin</directory>
      <excludes>
        <exclude>*.bat</exclude>
      </excludes>
      <outputDirectory>bin/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/apache-karaf-minimal-${karaf.version}/bin</directory>
      <includes>
        <include>*.bat</include>
      </includes>
      <outputDirectory>bin/</outputDirectory>
      <lineEnding>dos</lineEnding>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Expanded Karaf -->
    <fileSet>
      <directory>${project.build.directory}/apache-karaf-minimal-${karaf.version}</directory>
      <outputDirectory>.</outputDirectory>
      <excludes>
        <exclude>bin/**</exclude>
        <exclude>deploy/README</exclude>
        <exclude>README</exclude>
        <exclude>LICENSE</exclude>
        <exclude>NOTICE</exclude>
        <exclude>RELEASE-NOTES</exclude>
        <exclude>karaf-manual*</exclude>
        <exclude>*.md</exclude>
        <!-- We use only the OSGi core apache felix instead of eclipse.osgi. -->
        <exclude>**/org.eclipse.osgi/**</exclude>
      </excludes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <files>
   <file>
      <source>${output.directory}/xipki/client-config/template.ca-client-signature.xml</source>
      <outputDirectory>xipki/client-config</outputDirectory>
      <destName>template.ca-client.xml</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ca/example/h2.ca-db.properties</source>
      <outputDirectory>xipki/etc/ca</outputDirectory>
      <destName>ca-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ca/example/h2.ocsp-db.properties</source>
      <outputDirectory>xipki/etc/ca</outputDirectory>
      <destName>ocsp-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-cache-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-cache-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-crl-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-crl-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
  </files>
</assembly>
