<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>main</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>../shared/conf/xipki</directory>
      <outputDirectory>xipki</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <includes>
        <include>security/**</include>
        <include>etc/ocsp/**</include>
        <include>etc/org.xipki.ocsp.server.cfg</include>
        <include>etc/org.xipki.password.cfg</include>
        <include>etc/org.xipki.security.cfg</include>
        <include>etc/org.xipki.security.pkcs11.cfg</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/assembly/unfiltered</directory>
      <outputDirectory>.</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/xipki</directory>
      <outputDirectory>xipki</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/webapps/ocsp-servlet.war</source>
      <outputDirectory>webapps</outputDirectory>
      <destName>ocsp.war</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-cache-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-cache-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>../shared/conf/xipki/etc/ocsp/example/h2.ocsp-crl-db.properties</source>
      <outputDirectory>xipki/etc/ocsp</outputDirectory>
      <destName>ocsp-crl-db.properties</destName>
      <fileMode>0644</fileMode>
    </file>
  </files>
</assembly>
