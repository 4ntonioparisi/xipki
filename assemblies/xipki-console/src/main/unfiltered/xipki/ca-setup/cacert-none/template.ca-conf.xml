<caconf xmlns="http://xipki.org/ca/conf/v2" basedir="APP_DIR">
  <properties>
    <property name="profiles.dir">xipki/ca-setup/certprofile</property>
    <property name="token.type">REPLACEME_TOKEN_TYPE</property>
    <property name="ca.signerConf">REPLACEME_CA_SIGNERCONF</property>
  </properties>
  <signers>
    <signer name="responder1">
      <type>pkcs12</type>
      <conf>
        <value>password=1234,keystore=file:xipki/keycerts/tlskeys/server/tls-server.p12,algo=SHA256withRSA</value>
      </conf>
    </signer>
  </signers>
  <requestors>
    <requestor name="requestor1">
      <type>cert</type>
      <binaryConf>
        <file>xipki/keycerts/tlskeys/client/tls-client-cert.der</file>
      </binaryConf>
    </requestor>
    <requestor name="requestor-mac1">
      <type>pbm</type>
      <conf>
        <value>123456</value>
      </conf>
    </requestor>
  </requestors>
  <users>
    <user name="user1">
      <password>password1</password>
    </user>
  </users>
  <publishers>
    <publisher name="ocsp-publisher">
      <type>OCSP</type>
      <conf>
        <value>datasource=ocsp,publish.goodcerts=true</value>
      </conf>
    </publisher>
  </publishers>
  <profiles>
    <profile name="rootca">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-rootca.xml</file>
      </conf>
    </profile>
    <!--profile name="subca">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-subca.xml</file>
      </conf>
    </profile-->
    <profile name="scep">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-scep.xml</file>
      </conf>
    </profile>
    <profile name="ocsp">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-ocsp.xml</file>
      </conf>
    </profile>
    <profile name="tls">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-tls.xml</file>
      </conf>
    </profile>
    <profile name="tls-c">
      <type>xml</type>
      <conf>
        <file>${profiles.dir}/certprofile-tls-c.xml</file>
      </conf>
    </profile>
  </profiles>
  <cas>
    <ca name="myca1">
      <caInfo>
        <genSelfIssued>
          <csr>
            <file>xipki/ca-setup/keycerts/myca1.csr</file>
          </csr>
          <profile>rootca</profile>
          <serialNumber>1</serialNumber>
        </genSelfIssued>
        <cmpControl>send.ca=true,messagetime.bias=300,rr.aki.required=true,group.enroll=true,protection.sigalgo=SHA256withRSA:SHA256withECDSA,popo.sigalgo=SHA256withRSA:SHA256withECDSA:SHA256withDSA:SM3withSM2</cmpControl>
         <!-- create CRL at 02:00 UTC, one per day, with overlapping time 90 minutes -->
        <crlControl>update.mode=interval,fullcrl.intervals=1,overlap.minutes=90,interval.time=02:00</crlControl>
        <duplicateKey>true</duplicateKey>
        <duplicateSubject>true</duplicateSubject>
        <expirationPeriod>365</expirationPeriod>
        <keepExpiredCertDays>-1</keepExpiredCertDays>
        <permissions>
          <permission>all</permission>
        </permissions>
        <maxValidity>10y</maxValidity>
        <cmpResponderName>responder1</cmpResponderName>
        <protocolSupport>cmp,rest,scep</protocolSupport>
        <saveReq>false</saveReq>
        <signerType>${token.type}</signerType>
        <signerConf>
          <value>${ca.signerConf}</value>
        </signerConf>
        <status>active</status>
        <validityMode>cutoff</validityMode>
        <caUris>
          <crlUris>
            <uri>http://ca.example.org/crl</uri>
          </crlUris>
          <ocspUris>
            <uri>http://localhost:8080/ocsp/responder1</uri>
          </ocspUris>
        </caUris>
        <nextCrlNo>2</nextCrlNo>
        <snSize>63</snSize>
      </caInfo>
      <aliases>
        <alias>myca</alias>
      </aliases>
      <profiles>
        <!--profile>subca</profile-->
        <profile>ocsp</profile>
        <profile>scep</profile>
        <profile>tls</profile>
        <profile>tls-c</profile>
      </profiles>
      <requestors>
        <requestor>
          <requestorName>requestor1</requestorName>
          <ra>true</ra>
          <permissions>
            <permission>all</permission>
          </permissions>
          <profiles>
            <profile>all</profile>
          </profiles>
        </requestor>
        <requestor>
          <requestorName>requestor-mac1</requestorName>
          <ra>true</ra>
          <permissions>
            <permission>all</permission>
          </permissions>
          <profiles>
            <profile>all</profile>
          </profiles>
        </requestor>
      </requestors>
      <users>
        <user>
          <userName>user1</userName>
          <permissions>
            <permission>all</permission>
          </permissions>
          <profiles>
            <profile>all</profile>
          </profiles>
        </user>
      </users>
      <publishers>
        <publisher>ocsp-publisher</publisher>
      </publishers>
    </ca>
  </cas>
</caconf>
