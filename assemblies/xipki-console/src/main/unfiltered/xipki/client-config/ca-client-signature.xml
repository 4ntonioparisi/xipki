<caclient xmlns="http://xipki.org/ca/client/conf/v2">
  <ssls>
    <ssl>
      <name>ssl1</name>
      <storeType>PKCS12</storeType>
      <keystoreFile>xipki/keycerts/tlskeys/client/tls-client.p12</keystoreFile>
      <keystorePassword>1234</keystorePassword>
      <truststoreFile>xipki/keycerts/tlskeys/ca/tls-ca-cert.p12</truststoreFile>
      <truststorePassword>1234</truststorePassword>
      <hostnameVerifier>default</hostnameVerifier>
    </ssl>
  </ssls>
  <requestors>
    <requestor>
      <name>requestor1</name>
      <signRequest>false</signRequest>
      <signature>
        <!-- Can be commented if the certificate can be retrieved from the signerType and signerConf -->
        <!--cert>
          <file>xipki/keycerts/tlskeys/client/tls-client-cert.der</file>
        </cert-->
        <!-- Required if signRequest is true and/or you wish the CA to generate private key -->
        <signerType>PKCS12</signerType>
        <signerConf>password=1234,algo=SHA256WITHRSA,keystore=file:xipki/keycerts/tlskeys/client/tls-client.p12</signerConf>
      </signature>
    </requestor>
  </requestors>
  <responders>
    <responder>
      <name>responder1</name>
      <cert>
        <file>xipki/keycerts/tlskeys/server/tls-server-cert.der</file>
      </cert>
      <signature>
        <signatureAlgos>
          <algo>SHA256WITHRSA</algo>
        </signatureAlgos>
      </signature>
    </responder>
  </responders>
  <cas>
    <!-- Interval in minutes to update the CA information if autoconf is activated,
      default to be 10, value between 1 and 4 will be converted to 5, value less than 1
      disables the interval update -->
    <cainfoUpdateInterval>10</cainfoUpdateInterval>
    <ca>
      <name>MYCA</name>
      <url>https://localhost:8443/ca/cmp/myca</url>
      <ssl>ssl1</ssl>
      <requestor>requestor1</requestor>
      <responder>responder1</responder>
      <cmpcontrol>
        <autoconf/>
      </cmpcontrol>
      <caCert>
        <autoconf/>
      </caCert>
      <certprofiles>
        <autoconf/>
      </certprofiles>
    </ca>
  </cas>
</caclient>
